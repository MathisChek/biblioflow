# Copiez ce fichier vers .env et remplissez avec vos valeurs

NODE_ENV=development
PORT=3000

# Clé secrète pour signer les tokens JWT (CHANGEZ EN PRODUCTION !)
JWT_SECRET=your_super_secret_jwt_key_change_me

# Host de la base de données (postgres pour Docker, localhost pour local)
DATABASE_HOST=postgres
DATABASE_PORT=5432

# Utilisateur et mot de passe de la base
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Nom de la base de données
DATABASE_NAME=biblioflow_dev

# SSL activé ? (true en production, false en développement)
DATABASE_SSL=false

# Nombre maximum de connexions simultanées
DATABASE_MAX_CONNECTIONS=10

# Synchronisation automatique du schéma (true en dev, false en prod)
DATABASE_SYNCHRONIZE=true

# Logs SQL activés ? (true en dev pour debug, false en prod)
DATABASE_LOGGING=true
